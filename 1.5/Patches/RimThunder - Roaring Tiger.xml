<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>Aoba.RimThunder.ROCA</li>
		</mods>
		<packageId>true</packageId>
		<caseTrue>
	
			<!-- RT_M1A2_MainBattleTank -->
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/Vehicles.VehicleDef[defName="RT_M1A2_MainBattleTank"]</xpath>
				<value>
					<descriptionHyperlinks>
						<!-- RT_M1A2_Tank_Turret -->
