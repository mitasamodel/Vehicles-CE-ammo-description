						<!--RT_M249_MGTurret-->
						<CombatExtended.AmmoSetDef>AmmoSet_762x51mmNATO</CombatExtended.AmmoSetDef>
						<!--RT_M1A2T_SecondaryTurret-->
						<CombatExtended.AmmoSetDef>AmmoSet_50BMG</CombatExtended.AmmoSetDef>
						<!--RT_M2HB_MGTurret-->
						<!--<CombatExtended.AmmoSetDef>AmmoSet_50BMG</CombatExtended.AmmoSetDef>-->
						<!--RT_M249_MGTurret-->
						<!--<CombatExtended.AmmoSetDef>AmmoSet_762x51mmNATO</CombatExtended.AmmoSetDef>-->
						<!--RT_GrenadeLauncherUS-->
						<CombatExtended.AmmoSetDef>RTC_AmmoSet_SmokeGrenade</CombatExtended.AmmoSetDef>
					</descriptionHyperlinks>
				</value>
			</Operation>
			
			<!--RT_M48H_MediumTank-->
			<xpath>Defs/Vehicles.VehicleDef[defName="RT_M48H_MediumTank"]</xpath>
				<value>
					<descriptionHyperlinks>
