					</descriptionHyperlinks>
				</value>
			</xpath>
			
			<!--RT_M1075_HEMTT-->
			<xpath>Defs/Vehicles.VehicleDef[defName="RT_M1075_HEMTT"]</xpath>
				<value>
					<descriptionHyperlinks>
						<!--RT_M249_MGTurret_HEMTT-->
						<CombatExtended.AmmoSetDef>AmmoSet_762x51mmNATO</CombatExtended.AmmoSetDef>
