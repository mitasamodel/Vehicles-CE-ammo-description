			<li>Killerbot.NavistarMaxxPro</li>
		</mods>
		<packageId>true</packageId>
		<caseTrue>
	
			<!-- Navistar MaxxPro MRAP -->
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/Vehicles.VehicleDef[defName="HID_Navistar_M2HB"]</xpath>
				<value>
					<descriptionHyperlinks>
						<!--HID_Navistar_M2HB-->
						<CombatExtended.AmmoSetDef>AmmoSet_50BMG</CombatExtended.AmmoSetDef>
						<!--HID_Navistar_Mk19GL-->
						<CombatExtended.AmmoSetDef>AmmoSet_40x53mmGrenade</CombatExtended.AmmoSetDef>						
					</descriptionHyperlinks>
				</value>
			</Operation>

		</caseTrue>
	</Operation>
</Patch>
